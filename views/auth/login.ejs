  <div class="login-error center-align">
    <% if (errors) {%>
      <% errors.forEach(function (error) { %>
        <%= __(error) %>
      <% }) %>
    <% } %>
  </div>

  <form role="form" action="/auth/local" method="post">
    <div class="form-group required">
      <input type="text" name="identifier" class="form-control" placeholder="Username or Email">
    </div>
    <div class="form-group" required>
      <input type="password" name="password" class="form-control" placeholder="Password">
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-info btn-action center-align">Sign in</button>
    <div>
  </form>

  <div class="sign-up-message">
    <p><a href="/register"><%= __("auth.login.register-new-account") %></a></p>
  </div>