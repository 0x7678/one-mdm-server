<div class="login">
  <div class="login-error center-align">
    <% if (errors) {%>
      <% errors.forEach(function (error) { %>
        <%= __(error) %>
      <% }) %>
    <% } %>
  </div>

  <form role="form" action="/auth/local" method="post">
    <div class="form-group required">
      <input type="text" name="identifier" class="form-control" placeholder="Username or Email">
    </div>
    <div class="form-group" required>
      <input type="password" name="password" class="form-control" placeholder="Password">
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-default center-align">Sign in</button>
    <div
  </form>

  <div class="sign-up-message">
    <p>Don't have an account? <a href="/register">Sign up</a></p>
  </div>

</div>

<% if (Object.keys(providers).length) { %>
  <h4>You can also use one of these...</h4>

  <% Object.keys(providers).forEach(function (key) { %>
    <a href="/auth/<%= providers[key].slug %>" role="button"><%= providers[key].name %></a>
  <% }) %>

<% } %>
