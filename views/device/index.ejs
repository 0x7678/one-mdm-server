<div class="page-heading">
  <h2>Devices</h2>      
</div>  

<% if(devices.length) { %>
  <table class="table table-hover table-bordered">
    <thead>
      <th>Device ID</th>
      <th>Device Name</th>
      <th>Last Seen</th>
      <th>Created On</th>    
      <th>Actions</th>
    </thead>
    <tbody>
      <% for(var i = 0; i < devices.length; i++) { %>
        <tr id="<%= devices[i].id %>">
          <td><%= devices[i].id %></td>
          <td><%= devices[i].name %></td>
          <td class="last-seen">
            <span data-toggle="tooltip" data-placement="left">
              <abbr class="timeago" data-toggle="tooltip" title="<%= devices[i].lastSeen ? devices[i].lastSeen.toISOString() : '' %>">Not available</abbr>
            </span
          </td>
          <td><%= devices[i].createdAt.toDateString() %></td>
          <td>
            <form action="/script/create" method="post" accept-charset="utf-8">
              <input type="text" name="device" class="hidden-field" value=<%= devices[i].id %> />
              <input type="submit" class="submit-link btn btn-sm btn-info" value="Check Disk Space" />
            </form>     
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <ul class="pager">  
    <li class="previous <%= previousButtonClass %>"><a href="/device/index?page=<%= currentPage - 1 %>">&larr; Previous</a></li>
    <li class="next <%= nextButtonClass %>"><a href="/device/index?page=<%= currentPage + 1 %>">Next &rarr;</a></li>
  </ul>

<% } else { %>

  <p class="not-available">No devices found<p>

<% } %>
  
